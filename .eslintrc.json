{
  "env": {
    "browser": true,
    "commonjs": false,
    "es2021": true,
    "node": false
  },
  "extends": [
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "build/**"
  ],
  "rules": {
    "indent": "off",
    "no-multi-spaces": "off",
    "require-jsdoc": "off",
    "max-len": [
      "off"
    ],
    "camelcase": "off", // TODO: re-enable
    "no-invalid-this": "off", // TODO: re-enable when we eventually move off of jquery (if that ever happens)
    "no-extra-semi": "error"
  }
}
